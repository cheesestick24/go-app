{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "web/js",
    "rootDir": "web/ts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true
  },
  "include": ["web/ts/**/*.ts"],
  "exclude": ["node_modules"]
}
